0<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="205dp"
        android:layout_height="730dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team A"
        android:id="@+id/team_A"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Points_A"
        android:text="0"
        android:textSize="25dp"
        android:layout_below="@+id/team_A"
        android:layout_centerInParent="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="+3 points"
        android:onClick="three_A_add"
        android:id="@+id/three_A"
        android:layout_below="@+id/Points_A"
        android:layout_centerInParent="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/two_A"
        android:layout_below="@+id/three_A"
        android:textSize="20sp"
        android:onClick="two_A_add"
        android:text="+2 points"
        android:layout_centerInParent="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/one_A"
        android:text="Free Throw"
        android:textSize="20sp"
        android:onClick="one_A_add"
        android:layout_centerInParent="true"
        android:layout_below="@+id/two_A"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="205dp"
        android:layout_height="730dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:text="Team B"
        android:textSize="20sp"
        android:id="@+id/team_B"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Points_B"
        android:textSize="25dp"
        android:text="0"
        android:layout_below="@+id/team_B"
        android:layout_centerInParent="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="+3 points"
        android:onClick="three_B_add"
        android:id="@+id/three_B"
        android:layout_below="@+id/Points_B"
        android:layout_centerInParent="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+2 points"
        android:textSize="20sp"
        android:id="@+id/two_B"
        android:layout_below="@+id/three_B"
        android:layout_centerInParent="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/one_B"
        android:layout_below="@+id/two_B"
        android:text="Free Throw"
        android:textSize="20sp"
        android:layout_centerInParent="true"/>
    </RelativeLayout>

</LinearLayout>